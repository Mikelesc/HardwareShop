    <!--google fonts-->
    <link href='//fonts.googleapis.com/css?family=Roboto:400,100,300,500,700,900' rel='stylesheet' type='text/css'>
</head>
<body>
    <!--element start here-->
    <div class="elelment">
        <h2>Formulario de recuperacion de contraseña</h2>
        <div class="element-main">
            <h1>Contraseña olvidada</h1>
            <p> Ingresa tu correo para que podamos recordarte tu contraseña.</p>
            <form method="post" asp-action="remember" asp-controller="remember">
                <input type="text" value="Your e-mail address" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Tu email;}">
                <input type="submit" value="Recuperar contraseña">
            </form>
        </div>
    </div> 

    <!--element end here-->
</body>
</html>