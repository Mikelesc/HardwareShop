@{
    ViewData["Title"] = "Inicio";
}

<div id="main">
    <script>
        $('#myCarousel').carousel();
        var winWidth = $(window).innerWidth();
        $(window).resize(function () {

            if ($(window).innerWidth() < winWidth) {
                $('.carousel-inner>.item>img').css({
                    'min-width': winWidth, 'width': winWidth
                });
            }
            else {
                winWidth = $(window).innerWidth();
                $('.carousel-inner>.item>img').css({
                    'min-width': '', 'width': ''
                });
            }
        });
    </script>
    <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="4000">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
            <li data-target="#myCarousel" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/placabase.jpg" alt="ASP.NET" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Bienvenidos al gaming de alto nivel
                        <a class="btn btn-default" href="@Url.Action("Index", "Componente")">
                            Saber más
                        </a>                       
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/honor.jpg" alt="Visual Studio" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        <a class="btn btn-default" href="@Url.Action("Index", "Componente")">
                            Saber más
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/ryzen.jpg" alt="Package Management" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Dad la bienvenida a los Ryzen 2000
                        <a class="btn btn-default" href="@Url.Action("Index", "Componente")">
                            Saber más
                        </a>
                    </p>
                </div>
            </div>
            <div class="item">
                <img src="~/images/intel.jpg" alt="Microsoft Azure" class="img-responsive" />
                <div class="carousel-caption" role="option">
                    <p>
                        Estan aquí
                        <a class="btn btn-default" href="@Url.Action("Index", "Componente")">
                            Saber más
                        </a>
                    </p>
                </div>
            </div>
        </div>
        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <h1 align="center" style="position:center;font-family:'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; font-style:italic; font-size:85px">
        Bienvenido a nuestra tienda
    </h1>
    <div>
        <h1 class="fa-align-center">Nuestros productos</h1>
        @foreach (var product in Model)
        {

            <div class="col-xs-3 col-md-3 col-lg-3 column productbox">
                <img src="~/productimages/@product.Imagen" class="img-responsive">
                <div class="producttitle">@product.Nombre</div>
                <div class="productprice"><div class="pull-right"><a asp-controller="Home" asp-action="añadir" asp-route-id="@product.Id" class="btn btn-danger btn-sm" role="button">BUY</a></div><div class="pricetext">@product.Precio €</div></div>
            </div>

        }
    </div>
</div>











